<!DOCTYPE menu>
<menu>
	<!-- the toolbar -->
	<toolbar>
		<action key="open_configuration"/>
		<action key="save_configuration"/>
		<separator/>
		<action key="show_log"/>
		<action key="show_overview"/>
		<separator/>
		<!--we just have one skin for now, so don't offer to change if cannot-->
		<!-- action key="open_skin"/ -->
		<action key="change_language"/>
		<action key="highlight_pulse"/>
		<separator/>
		<action key="zoom_in"/>
		<action key="zoom_out"/>
		<action key="fit_height"/>
		<action key="fit_width"/>
		<separator/>
		<action key="about"/>
		<action key="faq"/>
		<action key="settings"/>
	</toolbar>
	
	<!-- the menubar -->
	<menubar>
		<group sid="file">
			<action key="open_configuration"/>
			<action key="save_configuration"/>
		</group>
		<group sid="window">
			<action key="show_log"/>
			<action key="show_overview"/>
		</group>
		<group sid="view">
			<action key="change_language"/>
			<action key="highlight_pulse"/>
		</group>
		<group sid="zoom">
			<action key="zoom_in"/>
			<action key="zoom_out"/>
			<action key="fit_height"/>
			<action key="fit_width"/>
		</group>
		<group sid="help">
			<action key="about"/>
			<action key="faq"/>
			<action key="settings"/>
		</group>
	</menubar>
</menu>
